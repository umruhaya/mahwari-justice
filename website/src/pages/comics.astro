---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.tsx';
import ComicViewer from '../components/ComicViewer.tsx';
import Footer from '../components/Footer.tsx';

const pageTitle = "Chandoo and the Crimson Quest - Comic Books | Mahwari Justice";
const pageDescription = "Pakistan's first superhero comic book on periods, available in English, Urdu, and Sindhi. Educational comic books by Mahwari Justice.";
const pageKeywords = "comic books Pakistan, period education, Chandoo and the Crimson Quest, superhero comic, menstrual health education, Urdu comics, Sindhi comics, English comics";
---

<Layout 
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
  canonicalUrl="https://mahwarijustice.org/comics"
>
  <div id="app" class="min-h-screen">
    <!-- Header -->
    <Header client:load />
    
    <!-- Main Content -->
    <main role="main">
      <!-- Hero Section for Comics -->
      <section class="py-16 px-4 bg-gradient-to-br from-primary/5 to-secondary/5">
        <div class="container max-w-screen-xl mx-auto text-center">
          <h1 class="text-4xl md:text-6xl font-bold mb-6">
            <span class="text-primary">Chandoo</span> and the Crimson Quest
          </h1>
          <p class="text-xl text-muted-foreground max-w-3xl mx-auto mb-8">
            Pakistan's first superhero comic book addressing period education. 
            Available in three languages to make menstrual health education fun and accessible for everyone.
          </p>
          <div class="flex justify-center items-center space-x-4 text-sm text-muted-foreground">
            <span>üìö 71 Pages</span>
            <span>‚Ä¢</span>
            <span>üåç 3 Languages</span>
            <span>‚Ä¢</span>
            <span>ü¶∏‚Äç‚ôÄÔ∏è First of its Kind</span>
          </div>
        </div>
      </section>

      <!-- Comics Viewer -->
      <section class="py-16 px-4">
        <div class="container max-w-screen-xl mx-auto">
          <ComicViewer client:load showAll={true} />
        </div>
      </section>

      <!-- About the Comic -->
      <section class="py-16 px-4 bg-muted/30">
        <div class="container max-w-screen-xl mx-auto">
          <div class="grid lg:grid-cols-2 gap-12 items-center">
            <div class="space-y-6">
              <h2 class="text-3xl font-bold">About the Comic</h2>
              <div class="space-y-4 text-muted-foreground">
                <p>
                  "Chandoo and the Crimson Quest" is a groundbreaking comic book that combines superhero adventure 
                  with essential period education. Created by Mahwari Justice, this comic represents a new approach 
                  to addressing menstrual health stigma in Pakistan.
                </p>
                <p>
                  The story follows Chandoo, a superhero who fights period poverty and challenges societal taboos 
                  around menstruation. Through engaging storytelling and vibrant illustrations, the comic educates 
                  readers about menstrual health while entertaining them with an exciting adventure.
                </p>
                <p>
                  Published in English, Urdu, and Sindhi, the comic ensures accessibility across Pakistan's diverse 
                  linguistic communities, making period education available to young people in their native languages.
                </p>
              </div>
            </div>
            <div class="bg-gradient-to-br from-primary/10 to-secondary/10 rounded-lg p-8 text-center">
              <h3 class="text-2xl font-bold mb-4">Impact Statistics</h3>
              <div class="grid grid-cols-2 gap-6">
                <div>
                  <div class="text-3xl font-bold text-primary">3</div>
                  <div class="text-sm text-muted-foreground">Languages</div>
                </div>
                <div>
                  <div class="text-3xl font-bold text-secondary">71</div>
                  <div class="text-sm text-muted-foreground">Pages</div>
                </div>
                <div>
                  <div class="text-3xl font-bold text-accent">1st</div>
                  <div class="text-sm text-muted-foreground">Of Its Kind</div>
                </div>
                <div>
                  <div class="text-3xl font-bold text-primary">2024</div>
                  <div class="text-sm text-muted-foreground">Published</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
    
    <!-- Footer -->
    <Footer client:load />
  </div>
</Layout> 